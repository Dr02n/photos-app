include /mixins/csrf
include /mixins/method

doctype html
html(lang='en')
  head
    title Photo Book
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=en', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://code.getmdl.io/1.3.0/material.indigo-pink.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    block content

    .mdl-snackbar.mdl-js-snackbar(aria-live='assertive', aria-atomic='true', aria-relevant='text')
      .mdl-snackbar__text
      button.mdl-snackbar__action(type='button')

    script(defer, src='https://code.getmdl.io/1.3.0/material.min.js')
    script.
      var messages = !{JSON.stringify(flash())};
    script(src='/js/bundle.js')
